<?xml version="1.0" encoding="utf-8"?>
<root>

	<!-- CameraFeel: General -->

	<setting id="MainCamera_SpeedSlow" category="CameraFeel" subcategory="General" display_name="Camera Pan Speed (Slow)" type="FloatSlider" default_float="1" min_float="0.1" max_float="10"
		scope="MainGameOnly" rounding_type="Tenths"
			description="Speed when holding the 'move slowly' control." />

	<setting id="MainCamera_SpeedNormal" category="CameraFeel" subcategory="General" display_name="Camera Pan Speed (Normal)" type="FloatSlider" default_float="2" min_float="0.5" max_float="20"
			scope="MainGameOnly" rounding_type="Tenths"
			 description="Speed when not holding any movement multiplier controls." />

	<setting id="MainCamera_SpeedFast" category="CameraFeel" subcategory="General" display_name="Camera Pan Speed (Fast)" type="FloatSlider" default_float="4" min_float="1" max_float="80"
			scope="MainGameOnly" rounding_type="Tenths"
			 description="Speed when holding the 'move fast' control." />

	<setting id="MainCamera_SpeedTurbo" category="CameraFeel" subcategory="General" display_name="Camera Speed (Turbo)" type="FloatSlider" default_float="8" min_float="1" max_float="100"
			scope="MainGameOnly" rounding_type="Tenths"
			 description="Speed when holding the 'move fast' and 'move slow' controls together, which activates turbo." />
	
	<!-- CameraFeel: MapCamera -->
	<setting id="CityMapCamera_AnchorHeight" category="CameraFeel" subcategory="MapCamera" display_name="Anchor Height" type="IntSlider" default_int="9" min_int="0" max_int="20"
